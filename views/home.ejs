<!DOCTYPE html>
<html lang = "en" dir = "ltr">

<%- include("partials/head") -%>

<body>
    <%- include("partials/navbar") -%>
    <br>
    <div class = "container">
        <a class = "btn btn-primary" href = "/post">Post</a>

        <% posts = posts.sort((a, b) => (a.price < b.price) ? 1 : (a.price > b.price) ? -1 : 0) %>
        <% posts.forEach((post) => { %>
            <div>
                <h3><%= post.content %></h3>
                <p><%= `By ${post.author}` %></p>
                <p><%= `${post.createdAt} ago` %></p>
                <hr>
            </div>
        <% }) %>

    </div>
</body>

</html>